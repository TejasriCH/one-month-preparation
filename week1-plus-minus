public static void plusMinus(List<Integer> arr) {
    // Write your code here
      int n=arr.size();
      double pos=0;
      double nev=0;
      double zero=0;
      for(int i=0;i<n;i++){
          if(arr.get(i)>0){
              pos=pos+1;
          }
          else if(arr.get(i)<0){
              nev=nev+1;
          }
          else{
              zero+=1;
          }
      }
      System.out.println(pos/n);
      System.out.println(nev/n);
      System.out.println(zero/n);
    }

}
